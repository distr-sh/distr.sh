<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630" width="1200" height="630">
  <defs>
    <style>
      .bg { fill: #0f172a; }
      .title { fill: white; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; font-size: 56px; font-weight: bold; }
      .subtitle { fill: #94a3b8; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; font-size: 28px; }
      .container-blue { fill: #2563eb; stroke: #1e40af; stroke-width: 3; }
      .container-purple { fill: #7c3aed; stroke: #6d28d9; stroke-width: 3; }
      .container-red { fill: #dc2626; stroke: #b91c1c; stroke-width: 3; }
      .text-white { fill: white; font-family: monospace; font-size: 18px; }
      .text-sm { fill: white; font-family: monospace; font-size: 14px; }
      .icon { fill: #cbd5e1; }
    </style>
  </defs>

  <!-- Background -->
  <rect class="bg" width="1200" height="630"/>

  <!-- Title -->
  <text x="600" y="100" text-anchor="middle" class="title">Docker Compose Cron Jobs</text>
  <text x="600" y="150" text-anchor="middle" class="subtitle">Three Practical Approaches</text>

  <!-- Approach 1: Lightweight -->
  <rect class="container-blue" x="80" y="220" width="300" height="180" rx="12"/>
  <text x="230" y="260" text-anchor="middle" class="text-white" font-weight="bold">1. Lightweight Crontab</text>
  <text x="100" y="295" class="text-sm">Alpine + BusyBox crond</text>
  <text x="100" y="320" class="text-sm">~10MB image</text>
  <text x="100" y="345" class="text-sm">HTTP triggers</text>
  <text x="100" y="370" class="text-sm">No Docker socket</text>

  <!-- Clock icon for approach 1 -->
  <circle class="icon" cx="340" cy="250" r="20"/>
  <line stroke="white" stroke-width="2" x1="340" y1="250" x2="340" y2="240"/>
  <line stroke="white" stroke-width="2" x1="340" y1="250" x2="346" y2="250"/>

  <!-- Approach 2: Extended Backend -->
  <rect class="container-purple" x="450" y="220" width="300" height="180" rx="12"/>
  <text x="600" y="260" text-anchor="middle" class="text-white" font-weight="bold">2. Extended Backend</text>
  <text x="470" y="295" class="text-sm">Reuse backend image</text>
  <text x="470" y="320" class="text-sm">Different entrypoint</text>
  <text x="470" y="345" class="text-sm">Full code access</text>
  <text x="470" y="370" class="text-sm">Direct DB queries</text>

  <!-- Layers icon for approach 2 -->
  <rect class="icon" x="700" y="235" width="30" height="8" rx="2"/>
  <rect class="icon" x="700" y="248" width="30" height="8" rx="2"/>
  <rect class="icon" x="700" y="261" width="30" height="8" rx="2"/>

  <!-- Approach 3: Ofelia -->
  <rect class="container-red" x="820" y="220" width="300" height="180" rx="12"/>
  <text x="970" y="260" text-anchor="middle" class="text-white" font-weight="bold">3. Ofelia Launcher</text>
  <text x="840" y="295" class="text-sm">Spawns containers</text>
  <text x="840" y="320" class="text-sm">Full isolation</text>
  <text x="840" y="345" class="text-sm">Advanced features</text>
  <text x="840" y="370" class="text-sm">Requires socket access</text>

  <!-- Container icon for approach 3 -->
  <rect class="icon" x="1070" y="235" width="30" height="30" rx="4"/>
  <circle fill="#0f172a" cx="1085" cy="250" r="8"/>

  <!-- Bottom branding -->
  <text x="600" y="550" text-anchor="middle" class="subtitle" font-size="24">distr.sh/blog</text>

  <!-- Docker logo hint -->
  <path class="icon" d="M 50 550 h 20 v 8 h -20 z M 50 542 h 20 v 6 h -20 z M 50 534 h 20 v 6 h -20 z M 26 550 h 18 v 8 h -18 z M 74 550 h 18 v 8 h -18 z" opacity="0.3"/>
</svg>
