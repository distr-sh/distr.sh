---
import {Icon} from 'astro-icon/components';
import {products} from '~/data/products';
---

<div class="products-mega-menu-wrapper">
  <button
    class="products-trigger"
    type="button"
    aria-haspopup="true"
    aria-expanded="false">
    Product
    <svg
      width="12"
      height="12"
      viewBox="0 0 12 12"
      fill="currentColor"
      aria-hidden="true"
      style="display: inline-block; margin-left: 4px;">
      <path d="M6 8L2 4h8z"></path>
    </svg>
  </button>

  <div class="products-mega-menu" role="menu">
    <div class="products-grid">
      {
        products.map((product, index) => (
          <a
            href={product.href}
            class="product-item"
            data-index={index}
            role="menuitem">
            <div class="product-icon">
              <Icon name={`lucide:${product.value}`} class="icon-size" />
            </div>
            <div class="product-title">{product.title}</div>
          </a>
        ))
      }
    </div>

    <div class="product-description-container">
      <p class="product-description" id="product-description">
        {products[0].description}
      </p>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const wrapper = document.querySelector('.products-mega-menu-wrapper');
    const trigger = document.querySelector('.products-trigger');
    const menu = document.querySelector('.products-mega-menu');
    const productItems = document.querySelectorAll('.product-item');
    const descriptionElement = document.getElementById('product-description');

    if (!wrapper || !trigger || !menu || !descriptionElement) return;

    // Import products data for descriptions
    import('~/data/products').then(({products}) => {
      productItems.forEach(item => {
        item.addEventListener('mouseenter', () => {
          const index = parseInt(
            (item as HTMLElement).dataset.index || '0',
            10,
          );
          if (descriptionElement && products[index]) {
            descriptionElement.textContent = products[index].description;
          }
        });
      });
    });

    // Toggle menu
    let isOpen = false;
    let closeTimeout: number | undefined;

    const openMenu = () => {
      if (closeTimeout) {
        clearTimeout(closeTimeout);
        closeTimeout = undefined;
      }
      isOpen = true;
      menu.style.display = 'block';
      trigger.setAttribute('aria-expanded', 'true');
    };

    const closeMenu = () => {
      closeTimeout = window.setTimeout(() => {
        isOpen = false;
        menu.style.display = 'none';
        trigger.setAttribute('aria-expanded', 'false');
      }, 150);
    };

    wrapper.addEventListener('mouseenter', openMenu);
    wrapper.addEventListener('mouseleave', closeMenu);

    // Keyboard navigation
    trigger.addEventListener('click', () => {
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    trigger.addEventListener('keydown', e => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      }
    });
  });
</script>

<style>
  .products-mega-menu-wrapper {
    position: relative;
  }

  .products-trigger {
    background: none;
    border: none;
    color: var(--sl-color-white);
    font-weight: 600;
    font-size: inherit;
    font-family: inherit;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
  }

  .products-trigger:hover {
    color: var(--sl-color-gray-2);
  }

  :root[data-theme='light'] .products-trigger:hover {
    color: var(--sl-color-gray-3);
  }

  .products-mega-menu-wrapper::before {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    height: 1rem;
    background: transparent;
  }

  .products-mega-menu {
    display: none;
    position: absolute;
    top: calc(100% + 1rem);
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 1.5rem;
    width: max(800px, 60vw);
    max-width: 1000px;
    z-index: 1000;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .product-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0.75rem 0.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--sl-color-white);
    transition: all 0.2s ease;
  }

  .product-item:hover {
    background-color: var(--sl-color-gray-5);
    transform: translateY(-2px);
  }

  :root[data-theme='light'] .product-item {
    color: var(--sl-color-gray-1);
  }

  :root[data-theme='light'] .product-item:hover {
    background-color: var(--sl-color-gray-6);
  }

  .product-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.2rem;
    color: var(--sl-color-accent);
    border-radius: 0.5rem;
    background: var(--sl-color-gray-6);
    padding: 0.2rem;
  }

  .icon-size {
    width: 20px;
    height: 20px;
  }

  .product-title {
    font-size: 1;
    font-weight: 600;
  }

  .product-description-container {
    padding: 0 1rem;
  }

  .product-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin: 0;
    min-height: 3em;
    transition: opacity 0.2s ease;
  }

  :root[data-theme='light'] .product-description {
    color: var(--sl-color-gray-3);
  }

  @media (max-width: 72rem) {
    .products-mega-menu {
      display: none !important;
    }
  }
</style>
