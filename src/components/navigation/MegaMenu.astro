---
import {Icon} from 'astro-icon/components';

interface MenuItem {
  title: string;
  description: string;
  value: string;
  href: string;
}

interface Props {
  title: string;
  items: MenuItem[];
  columns?: number;
  itemWidth?: string;
  href?: string;
}

const {title, items, columns = 5, itemWidth = '140px', href} = Astro.props;
const menuId = `mega-menu-${title.toLowerCase().replace(/\s+/g, '-')}`;
const descriptionId = `${menuId}-description`;

// Calculate menu width based on columns and item width
const numericWidth = parseInt(itemWidth);
const gap = 8; // 0.5rem = 8px
const padding = 48; // 1.5rem * 2 = 48px
const menuWidth = numericWidth * columns + gap * (columns - 1) + padding;
---

<div class="mega-menu-wrapper">
  {
    href ? (
      <a href={href} class="menu-trigger menu-trigger-link">
        {title}
      </a>
    ) : (
      <button
        class="menu-trigger"
        type="button"
        aria-haspopup="true"
        aria-expanded="false">
        {title}
      </button>
    )
  }

  <div
    class="mega-menu"
    data-menu-id={menuId}
    style={`width: ${menuWidth}px; max-width: 90vw;`}>
    <div
      class="menu-grid"
      style={`grid-template-columns: repeat(${columns}, ${itemWidth});`}>
      {
        items.map((item, index) => (
          <a
            href={item.href}
            class="menu-item"
            data-index={index}
            data-menu-id={menuId}
            data-description={item.description}>
            <div class="menu-icon">
              <Icon name={`lucide:${item.value}`} class="icon-size" />
            </div>
            <div class="menu-item-title">{item.title}</div>
          </a>
        ))
      }
    </div>

    <div class="menu-description-container">
      <p class="menu-description" id={descriptionId}>
        {items.length > 0 ? items[0].description : ''}
      </p>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const wrappers = document.querySelectorAll('.mega-menu-wrapper');

    wrappers.forEach(wrapper => {
      const trigger = wrapper.querySelector('.menu-trigger');
      const menu = wrapper.querySelector('.mega-menu');
      const menuItems = wrapper.querySelectorAll('.menu-item');
      const menuId = menu?.getAttribute('data-menu-id');
      const descriptionElement = document.getElementById(
        `${menuId}-description`,
      );

      if (!wrapper || !trigger || !menu || !descriptionElement) return;

      // Function to parse and render description with badge
      const renderDescription = (description: string) => {
        const badgeRegex = /^(In Development|Enterprise|Beta|Alpha)\s*-\s*/i;
        const match = description.match(badgeRegex);

        // Clear existing content
        descriptionElement.textContent = '';

        if (match) {
          const badge = match[1];
          const text = description.replace(badgeRegex, '');
          const badgeClass = badge.toLowerCase().replace(/\s+/g, '-');

          // Create badge element safely
          const badgeSpan = document.createElement('span');
          badgeSpan.className = `menu-badge menu-badge-${badgeClass}`;
          badgeSpan.textContent = badge;

          // Append badge and the remaining description text
          descriptionElement.appendChild(badgeSpan);
          descriptionElement.appendChild(
            document.createTextNode(text ? ` ${text}` : ''),
          );
        } else {
          descriptionElement.textContent = description;
        }
      };

      // Initialize with first item
      const firstDescription =
        menuItems[0]?.getAttribute('data-description') || '';
      renderDescription(firstDescription);

      menuItems.forEach(item => {
        item.addEventListener('mouseenter', () => {
          const descriptionText =
            (item as HTMLElement).getAttribute('data-description') || '';
          renderDescription(descriptionText);
        });
      });

      // Toggle menu
      let isOpen = false;
      let closeTimeout: number | undefined;

      const openMenu = () => {
        if (closeTimeout) {
          clearTimeout(closeTimeout);
          closeTimeout = undefined;
        }
        isOpen = true;
        (menu as HTMLElement).style.display = 'block';
        trigger.setAttribute('aria-expanded', 'true');
      };

      const closeMenu = () => {
        closeTimeout = window.setTimeout(() => {
          isOpen = false;
          (menu as HTMLElement).style.display = 'none';
          trigger.setAttribute('aria-expanded', 'false');
        }, 150);
      };

      wrapper.addEventListener('mouseenter', openMenu);
      wrapper.addEventListener('mouseleave', closeMenu);

      // Keyboard navigation
      trigger.addEventListener('click', () => {
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      });

      trigger.addEventListener('keydown', e => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          if (isOpen) {
            closeMenu();
          } else {
            openMenu();
          }
        } else if (e.key === 'Escape' && isOpen) {
          e.preventDefault();
          closeMenu();
        }
      });

      // Close menu on outside click
      document.addEventListener('click', e => {
        if (isOpen && !wrapper.contains(e.target as Node)) {
          closeMenu();
        }
      });

      // Close menu on focus out
      wrapper.addEventListener('focusout', e => {
        // Check if the new focus target is outside the wrapper
        if (isOpen && !wrapper.contains(e.relatedTarget as Node)) {
          closeMenu();
        }
      });
    });
  });
</script>

<style>
  .mega-menu-wrapper {
    position: relative;
  }

  .menu-trigger {
    background: none;
    border: none;
    color: var(--sl-color-white);
    font-weight: 600;
    font-size: inherit;
    font-family: inherit;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
  }

  .menu-trigger-link {
    text-decoration: none;
  }

  .menu-trigger:hover {
    color: var(--sl-color-gray-2);
  }

  :root[data-theme='light'] .menu-trigger:hover {
    color: var(--sl-color-gray-3);
  }

  .mega-menu-wrapper::before {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    height: 1rem;
    background: transparent;
  }

  .mega-menu {
    display: none;
    position: absolute;
    top: calc(100% + 1rem);
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 1.5rem;
    z-index: 1000;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .menu-grid {
    display: grid;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .menu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0.75rem 0.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--sl-color-white);
    transition: all 0.2s ease;
  }

  .menu-item:hover {
    background-color: var(--sl-color-gray-5);
    transform: translateY(-2px);
  }

  :root[data-theme='light'] .menu-item {
    color: var(--sl-color-gray-1);
  }

  :root[data-theme='light'] .menu-item:hover {
    background-color: var(--sl-color-gray-6);
  }

  .menu-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
    color: var(--sl-color-accent);
    border-radius: 0.5rem;
    background: var(--sl-color-gray-6);
    padding: 0.5rem;
  }

  .icon-size {
    width: 20px;
    height: 20px;
  }

  .menu-item-title {
    font-size: 0.85rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .menu-description-container {
    padding: 0 1rem;
  }

  .menu-description {
    font-size: 0.8rem;
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin: 0;
    min-height: 1em;
    transition: opacity 0.2s ease;
  }

  :root[data-theme='light'] .menu-description {
    color: var(--sl-color-gray-3);
  }

  .menu-description :global(.menu-badge) {
    display: inline-block;
    padding: 0.0625rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    margin-right: 0.375rem;
  }

  .menu-description :global(.menu-badge-in-development) {
    background-color: rgba(59, 130, 246, 0.2);
    color: rgb(96, 165, 250);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .menu-description :global(.menu-badge-enterprise) {
    background-color: rgba(168, 85, 247, 0.2);
    color: rgb(196, 181, 253);
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  .menu-description :global(.menu-badge-beta) {
    background-color: rgba(234, 179, 8, 0.2);
    color: rgb(250, 204, 21);
    border: 1px solid rgba(234, 179, 8, 0.3);
  }

  .menu-description :global(.menu-badge-alpha) {
    background-color: rgba(239, 68, 68, 0.2);
    color: rgb(248, 113, 113);
    border: 1px solid rgba(239, 68, 68, 0.3);
  }

  :root[data-theme='light']
    .menu-description
    :global(.menu-badge-in-development) {
    background-color: rgba(59, 130, 246, 0.1);
    color: rgb(37, 99, 235);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  :root[data-theme='light'] .menu-description :global(.menu-badge-enterprise) {
    background-color: rgba(168, 85, 247, 0.1);
    color: rgb(126, 34, 206);
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  :root[data-theme='light'] .menu-description :global(.menu-badge-beta) {
    background-color: rgba(234, 179, 8, 0.1);
    color: rgb(161, 98, 7);
    border: 1px solid rgba(234, 179, 8, 0.3);
  }

  :root[data-theme='light'] .menu-description :global(.menu-badge-alpha) {
    background-color: rgba(239, 68, 68, 0.1);
    color: rgb(185, 28, 28);
    border: 1px solid rgba(239, 68, 68, 0.3);
  }

  @media (max-width: 72rem) {
    .mega-menu {
      display: none !important;
    }
  }
</style>
